<div class="bg-indigo-900 px-4 py-4">
  <div
    class="md:max-w-6xl md:mx-auto md:flex md:items-center md:justify-between"
  >
    <div class="flex justify-between items-center">
      <%= link_to 'NAL Online School', root_path, class: 'hover:bg-transparent inline-block py-2 text-white text-xl font-bold' %>
      <div
        class="inline-block cursor-pointer md:hidden">
        <div class="bg-gray-400 w-8 mb-2" style="height: 2px;"></div>
        <div class="bg-gray-400 w-8 mb-2" style="height: 2px;"></div>
        <div class="bg-gray-400 w-8" style="height: 2px;"></div>
      </div>
    </div>

    <div>
      <div class="hidden md:block">
        <%= link_to 'Comment ca fonctionne', '#', class: 'inline-block py-1 md:py-4 text-gray-100 mr-6 font-bold hover:bg-transparent' %>
        <%= link_to 'Services', services_path, class: "inline-block py-1 md:py-4 text-gray-500 hover:bg-transparent hover:text-gray-100 mr-6 #{'font-bold text-gray-100' if action_name == 'services'}" %>
        <%= link_to 'Actualités', actualites_path, class: "hover:bg-transparent inline-block py-1 md:py-4 text-gray-500 hover:text-gray-100 #{'font-bold' if action_name == 'actualites'}" %>
      </div>
    </div>
    <div class="hidden md:block">
      <% if user_signed_in? %>
        <%= link_to "Acceder au dashboard", home_index_path, class: "inline-block py-2 px-4 text-gray-700 bg-white hover:bg-gray-100 rounded-lg" %>
      <% elsif student_signed_in?%>
        <div class="inline-block py-2 px-4 text-gray-100 rounded-lg">
          Hello <%= current_student.complete_name.upcase %>
        </div>
        <%= link_to "Acceder à votre espace", home_student_index_path, class: "inline-block py-2 px-4 text-gray-700 bg-white hover:bg-gray-100 rounded-lg" %>
      <% else %>
        <%= link_to "Je suis apprenant", new_student_session_path, class: "hover:bg-transparent inline-block py-1 md:py-4 text-gray-500 hover:text-gray-100 mr-6" %>
        <%= link_to "Je suis un enseignant", new_user_session_path, class: "inline-block py-2 px-4 text-gray-700 bg-white hover:bg-gray-100 rounded-lg" %>
      <% end %>
    </div>
  </div>
</div>