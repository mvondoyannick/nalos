<% if @file.video? %>

  <%= video_tag url_for(@file), controls: true %>

<% elsif @file.content_type.end_with?('pdf') %>

  <%= link_to rails_blob_path(@file, disposition: "attachment"), class: "shadow hover:grow hover:shadow-2xl p-10" do %>
    <%= image_tag 'programme_mppp_1.png', height: 500 %>
  <% end %>

