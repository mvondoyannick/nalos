<div class="ml-5">
  <p id="notice"><%= notice %></p>

  <p class="text-lg font-bold mt-5">
    <strong>Title:</strong>
    <%= @enseignement.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @enseignement.content %>
  </p>

  <p>
    <strong class="text-lg text-gray-400">Video file</strong>
    <%= video_tag url_for(@enseignement.image), size: "780x300", controls: true, class: "shadow", class: "shadow-lg px-5 mt-5" %>
  </p>

  <div class="mt-5">
    <%= link_to 'Edit', edit_enseignement_path(@enseignement) %> |
    <%= link_to 'Retour', enseignements_path, class: "rounded-lg inline-block bg-indigo-500 text-white px-5 shadow-lg py-3" %>
  </div>
</div>
