<% if notice.present? %>
  <%= render 'layouts/notification_success' %>
<% end %>

<!-- This example requires Tailwind CSS v2.0+ -->
<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Content goes here -->

  <!-- This example requires Tailwind CSS v2.0+ -->
  <div class="pb-5 border-b border-gray-200 sm:flex sm:items-center sm:justify-between mt-8">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      Liste des rôles disponibles
    </h3>
    <div class="mt-3 sm:mt-0 sm:ml-4">
      <%= link_to "Ajouter un nouveau rôle", new_role_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:text-white bg-indigo-500 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>


  <div class="flex flex-col mt-8">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
            <tr>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Name role
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Description
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Status
              </th>
              <th class="px-6 py-3 bg-gray-50"></th>
              <th class="px-6 py-3 bg-gray-50"></th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            <% @roles.each do |role| %>
              <tr>
                <td class="px-6 py-4 whitespace-no-wrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=facearea&amp;facepad=4&amp;w=256&amp;h=256&amp;q=60" alt="">
                    </div>
                    <div class="ml-4">
                      <div class="text-sm leading-5 font-medium text-gray-900">
                        <%= button_tag role.name.upcase, data: {reflex: "click->ExampleReflex#greetings", id: role.id} %>
                      </div>
                      <div class="text-sm leading-5 text-gray-500">
                        <%= role.created_at %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap">
                  <div class="text-sm leading-5 text-gray-900"><%= role.content.nil? ? "Aucune description" : role.content %></div>
                  <div class="text-sm leading-5 text-gray-500"><%= @data %></div>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap">
                <span data-reflex="click->ExampleReflex#greetings" class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Active
                </span>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap text-right text-sm leading-5 font-medium">
                  <%= link_to 'Show', edit_role_path(role), class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap text-right text-sm leading-5 font-medium">
                  <%#= link_to 'Supprimer', role, method: :delete, data: { confirm: 'Are you sure?', reflex: "ExampleReflex#greetings" }, class: "text-red-600 hover:text-red-900" %>
                  <%= button_tag 'Supprimer', data: { confirm: 'Are you sure?', reflex: "click->ExampleReflex#delete_role", id: role.id }, class: "text-red-600 hover:text-red-900" if current_user.role.name == 'admin' %>
                </td>
              </tr>
            <% end %>

            <!-- More rows... -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>

<%#= link_to 'New Role', new_role_path %>
