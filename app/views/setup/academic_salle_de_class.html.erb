<section class="text-gray-700 body-font">
  <div class="container px-5 mx-auto">
    <div class="flex flex-wrap -m-2">
      <% @salles.each do |salle| %>
        <div class="p-2 lg:w-1/3 md:w-1/2 w-full">
          <div class="h-full flex items-center border-gray-200 border p-4 rounded-lg hover:shadow-xl">
            <img alt="team" class="w-16 h-16 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4" src="https://dummyimage.com/80x80">
            <div class="flex-grow">
              <h2 class="text-gray-900 title-font font-medium"><%= salle.name %></h2>
              <p class="text-gray-500"><%= Student.where(salle_de_class_id: salle.id).count %> apprenants</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>