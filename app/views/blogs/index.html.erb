<p id="notice"><%= notice %></p>

<h1>Blogs</h1>


<section data-section-id="2" data-category="blog" data-component-id="73a6_13_02_awz" class="py-12 px-4">
  <h2 class="text-3xl text-center mb-8 font-heading" data-config-id="header">Latest posts</h2>
  <div class="flex flex-wrap -mx-4">

    <% @blogs.each do |blog| %>
      <div class="w-full lg:w-1/3 px-4 mb-8 lg:mb-0">
        <div class="h-full bg-white pb-8 rounded shadow-md">
          <a href="#">
            <img class="mb-4" src="https://tailwind.build/placeholders/pictures/work.jpg" alt="" data-config-id="col1-image">
            <div class="px-6">
              <small data-config-id="col1-date-name"><%= blog.created_at.strftime("%d %b %Y") %> | Par <%= blog.user.complete_name %></small>
              <h3 class="text-xl my-3 font-heading" data-config-id="col1-title"><%= blog.title %></h3>
              <p class="text-gray-500" data-config-id="col1-desc">The wise man once said: "Friend first, boss second, entertainer third". That man was me.</p>
            </div>
          </a>
        </div>
      </div>
    <% end %>

  </div>
</section>


<br>

