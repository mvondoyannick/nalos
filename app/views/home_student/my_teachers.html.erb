<p class="text-gray-400 font-semibold text-xl">
  Mes enseignants
</p>

<div class="flex mb-6">
  <% User.all.where(role_id: 2).each do |teacher| %>
    <div class="w-2/6 mr-2 mt-2">
      <div class="bg-white my-12 pb-6 w-full justify-center items-center overflow-hidden md:max-w-sm rounded-lg shadow-sm mx-auto">
        <div class="relative h-40">
          <%= image_tag 'abstract.jpg', class: 'absolute h-full w-full object-cover' %>
        </div>
        <div class="relative shadow mx-auto h-24 w-24 -my-12 border-white rounded-full overflow-hidden border-4">
          <%= image_tag 'teacher.png', class: "object-cover w-full h-full" %>
        </div>
        <div class="mt-16">
          <h1 class="text-lg text-center font-semibold">
            <%= teacher.complete_name.upcase %>
          </h1>
          <p class="text-sm text-gray-600 text-center mt-2">
            <% if teacher.role.name == "teacher" %>
              <%= Course.where(user_id: teacher.id, salle_de_class_id: current_student.salle_de_class_id).count %> Cour(s) disponible(s)
            <% end %>
          </p>
        </div>
        <div class="mt-6 pt-3 flex flex-wrap mx-6 border-t">
          <div class="text-xs mr-2 my-1 uppercase tracking-wider border px-2 text-indigo-600 border-indigo-600 hover:bg-indigo-600 hover:text-indigo-100 cursor-default">
            <%= link_to "AccÃ©der aux cours", my_teacher_course_path(current_teacher: teacher.id) %>
          </div>
          <div class="text-xs mr-2 my-1 uppercase tracking-wider border px-2 text-indigo-600 border-indigo-600 hover:bg-indigo-600 hover:text-indigo-100 cursor-default">
            Message chat
          </div>
          <div class="text-xs mr-2 my-1 uppercase tracking-wider border px-2 text-indigo-600 border-indigo-600 hover:bg-indigo-600 hover:text-indigo-100 cursor-default">
            Laisser un message
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

