<!-- This example requires Tailwind CSS v2.0+ -->
<div class="pb-5 border-b border-gray-200 mb-8">
  <h3 class="text-lg leading-6 font-medium text-gray-900">
    Mon panneau personnel, mes activités
  </h3>
  <p class="mt-2 max-w-4xl text-sm text-gray-500">
    Retrouvez toutes les informations liées à votre compte et ce que vous avez fait sur la plateforme durant votre parcours.</p>
</div>


<div class="flex flex-col">
  <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
    <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
      <table class="min-w-full">
        <thead>
        <tr>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
            Leçon consultée
          </th>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
            Enseignant
          </th>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-50"></th>
        </tr>
        </thead>
        <tbody class="bg-white">
        <% @course_data.limit(10).each do |statisitic| %>
          <tr>
            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <%= image_tag 'course.png', class: "h-10 w-10 rounded-full" %>
                </div>
                <div class="ml-4">
                  <div class="text-sm leading-5 font-medium text-gray-900"><%= link_to Course.find(statisitic.course_id).chapter, read_course_path(statisitic.course_id) %></div>
                  <div class="text-sm leading-5 text-gray-500"><%= statisitic.created_at.strftime('%d %b %Y, %Hh:%Mm') %></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
              <div class="text-sm leading-5 text-gray-900"><%= Course.find(statisitic.course_id).user.complete_name %></div>
              <div class="text-sm leading-5 text-gray-500"></div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="bg-gray-50">
  <div class="max-w-screen-xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between">
    <h2 class="text-3xl leading-9 font-extrabold tracking-tight text-gray-900 sm:text-4xl sm:leading-10">
      Mes acticités
      <br />
      <span class="text-indigo-600">hebdomadaires.</span>
    </h2>
  </div>
</div>

