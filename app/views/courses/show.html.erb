                      <%= image_tag(docs.preview(resize: "1000x1000"), class: "absolute h-full w-full object-cover") %>
                    <% elsif docs.content_type.end_with?("msword") %>
                      <%= image_tag(docs.preview(resize: "1000x1000"), class: "absolute h-full w-full object-cover") %>
