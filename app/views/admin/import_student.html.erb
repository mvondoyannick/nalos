<p class="text-xl text-gray-400 font-semibold mb-8">
  Importer des apprenants
</p>

<%= form_with(url: import_student_intent_path, class: 'w-full max-w-lg') do |form| %>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <%= form.label "Fichiers apprenant", class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' %>
      <%= form.file_field :fichier, class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-password' %>
      <p class="text-gray-600 text-xs italic">Selectionner un fichier au format CSV</p>

      <%= form.submit "Importer", class: 'mt-8 bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded' %>
    </div>
  </div>
<% end %>

<div class="overflow-x-auto bg-white rounded-lg shadow">
  <table class="w-full whitespace-no-wrap bg-white overflow-hidden table-striped">
    <thead>
    <tr class="text-left">
      <th class="px-6 py-3 text-gray-500 font-bold tracking-wider uppercase text-xs">Matricule</th>
      <th class="px-6 py-3 text-gray-500 font-bold tracking-wider uppercase text-xs">Nom & pr√©nom</th>
      <th class="px-6 py-3 text-gray-500 font-bold tracking-wider uppercase text-xs">Matricule</th>
      <th class="px-6 py-3 text-gray-500 font-bold tracking-wider uppercase text-xs">phone</th>
    </tr>
    </thead>
    <tbody>
    <% @students.each do |course| %>
      <tr>
        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-10 w-10">
              <svg xmlns="http://www.w3.org/2000/svg" class="mr-4 opacity-50" width="40" height="40"
                   viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                   stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z"/>
                <polyline points="14 3 14 8 19 8" />
                <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z" />
                <path d="M9 15l2 2l4 -4" />
              </svg>
            </div>
            <div class="ml-4">
              <div><%= course.matricule %></div>
              <div class="text-sm leading-5 text-gray-500"> Heures</div>
            </div>
          </div>
        </td>
        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
          <div class="text-sm leading-5 text-gray-900"><%= course.name %></div>
          <div class="text-sm leading-5 text-gray-900"><%= course.matricule %></div>
        </td>
        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
          <div class="text-sm leading-5 text-gray-900"><%= course.matricule %></div>
        </td>
        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
          <div class="text-sm leading-5 text-gray-900"><%= course.phone %></div>
        </td>
      </tr>

    <% end %>

    </tbody>
  </table>
</div>