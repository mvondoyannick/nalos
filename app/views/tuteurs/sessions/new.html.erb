<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "w-32 max-w-sm") do |f| %>

  <!-- Three columns -->
  <div class="flex mb-12">
    <div class="w-2/12"></div>
    <div class="w-8/12 h-12">
      <div class="flex items-center border-b border-b-2 border-teal-500 py-2">
        <%= f.phone_field :phone1, autofocus: true, autocomplete: "phone", placeholder: "Votre numéro de téléphone", class: "appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none" %>
      </div>
    </div>
    <div class="w-2/12"></div>
  </div>

  <div class="flex mb-12">
    <div class="w-2/12"></div>
    <div class="w-8/12">
      <div class="flex items-center border-b border-b-2 border-teal-500 py-2">
        <%= f.password_field :password, placeholder: "Mot de passe", class: "appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none" %>
      </div>
    </div>
    <div class="w-2/12"></div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3"></div>
    <label class="md:w-2/3 block text-gray-500 font-bold">
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
      <% end %>
      <span class="text-sm">
        Se souvenir de moi
      </span>
    </label>
  </div>


  <div class="flex items-stretch h-24">
    <div class="flex-1 text-gray-700 text-center px-4 py-2 m-2">
      <%= f.submit "Se connecter", class: "shadow-lg bg-blue-500 hover:bg-blue-700 text-white font-bold py-4 px-10 rounded-md object-center" %>
    </div>
  </div>

<% end %>

