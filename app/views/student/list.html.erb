<!--
  Tailwind UI components require Tailwind CSS v1.8 and the @tailwindcss/ui plugin.
  Read the documentation to get started: https://tailwindui.com/documentation
-->
<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200" id="example">
          <thead>
          <tr>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
              Nom & matricule
            </th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
              Classe
            </th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
              Info Naissance
            </th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
              Contact Père
            </th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
              Contact Mère
            </th>
            <th class="px-6 py-3 bg-gray-50"></th>
          </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
          <% @students.each do |student| %>
            <tr>
              <td class="px-6 py-4 whitespace-no-wrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=facearea&amp;facepad=4&amp;w=256&amp;h=256&amp;q=60" alt="">
                  </div>
                  <div class="ml-4">
                    <div class="text-sm leading-5 font-medium text-gray-900">
                      <%= student.name.upcase %>&nbsp;<%= student.second_name %>
                    </div>
                    <div class="text-sm leading-5 text-gray-500">
                      <%= student.matricule %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap">
                <div class="text-sm leading-5 text-gray-900"><%= student.salle_de_class.name %></div>
                <div class="text-sm leading-5 text-gray-500"><%= Structure.find(student.structure).name.upcase %></div>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap">
                <div class="text-sm leading-5 text-gray-900"><%= student.d_naissance %></div>
                <div class="text-sm leading-5 text-gray-500"><%= student.l_naissance %></div>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap">
                <div class="text-sm leading-5 text-gray-900"><%= student.pere %></div>
                <div class="text-sm leading-5 text-gray-500"><%= student.c_pere.nil? ? 'Aucun' : student.c_pere %></div>
                <div class="text-sm leading-5 text-gray-500"><%= student.f_pere.nil? ? 'Aucune fonction' : student.f_pere %></div>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap">
                <div class="text-sm leading-5 text-gray-900"><%= student.mere %></div>
                <div class="text-sm leading-5 text-gray-500"><%= student.c_mere.nil? ? 'Aucun' : student.c_mere %></div>
                <div class="text-sm leading-5 text-gray-500"><%= student.f_mere.nil? ? 'Aucune fonction' : student.f_mere %></div>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap text-right text-sm leading-5 font-medium">
                <a href="#" class="text-indigo-600 hover:text-indigo-900">Edit</a>
              </td>
            </tr>
          <% end %>

          <!-- More rows... -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
