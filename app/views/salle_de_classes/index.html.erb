<br>
<%= paginate @salle_de_classes %>
<br>
<div class="bg-white shadow p-8 rounded">
  <ul class="font-sans list-none p-0 container m-auto text-gray-900">
    <% @salle_de_classes.each do |salle_de_class| %>
      <li class="inline-block border-b border-gray-300 flex justify-between items-center py-4">
        <div class="flex items-start w-2/5">
          <div class="w-10 h-10 rounded mr-3">
            <div class="rounded-full h-10 w-10">
              <%= image_tag 'course.png' %>
            </div>
          </div>
          <div class="flex-1 overflow-hidden">
            <div>
              <span class="font-bold"><%= salle_de_class.name %></span>
              <span class="text-gray-700 text-xs">@logan</span>
            </div>
            <p class="text-black leading-normal"><%= salle_de_class.cycle_ecole.name %></p>
          </div>
        </div>
        <p class="w-2/5">Aucun effectif ...</p>
        <label for="status" class="font-bold w-2/5 text-right">
          <%= link_to 'Voir', salle_de_class, class: "m-4" %>
          <%= link_to 'Editer', edit_salle_de_class_path(salle_de_class), class: "m-4" %>
          <%= link_to 'Supprimer', salle_de_class, method: :delete, data: { confirm: 'Are you sure?' }, class: "m-4" %>
        </label>
      </li>
    <% end %>
  </ul>
</div>
