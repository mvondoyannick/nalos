<p id="notice"><%= notice %></p>

<div class="container mx-auto px-4 sm:px-6 lg:px-8">

  <!-- This example requires Tailwind CSS v2.0+ -->
  <div class="pb-5 border-b border-gray-200 sm:flex sm:items-center sm:justify-between mt-8">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      Liste des salles de classes
    </h3>
    <div class="mt-3 sm:mt-0 sm:ml-4">
      <%= link_to "Nouvelle salle de classe", new_salle_de_class_path, class: "items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>

  <% if @salle_de_classes.empty? %>

  <% else %>

    <!-- This example requires Tailwind CSS v2.0+ -->
    <div class="flex flex-col mt-8">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead>
              <tr>
                <th scope="col" class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Libell√©
                </th>
                <th scope="col" class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Section
                </th>
                <th scope="col" class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Apprenants
                </th>
                <th scope="col" class="px-6 py-3 bg-gray-50" colspan="3">
                  <span class="sr-only">Edit</span>
                </th>
              </tr>
              </thead>
              <tbody>
              <% @salle_de_classes.each do |salle_de_class| %>

                <tr class="bg-white">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= salle_de_class.name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= salle_de_class.cycle_ecole.name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= Student.where(salle_de_class_id: salle_de_class.id).count %> Apprenant(s) inscrit
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to 'Voir apprenants', salle_de_class, class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to 'Editer', edit_salle_de_class_path(salle_de_class), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to 'Supprimer', salle_de_class, method: :delete, data: {confirm: 'Are you sure?'}, class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                </tr>

              <% end %>
              <!-- More rows... -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  <% end %>

</div>
